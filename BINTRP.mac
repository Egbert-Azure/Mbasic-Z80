	ld	b,0	; INITIALIZE THE PAREN COUNT
SCNOPN:	inc	b	; UP THE COUNT FOR EVERY "("
SCNCON:	call	CHRGTR	; GET THE NEXT CHARACTER
	jp	z,SNERR	; SHOULDN'T END STATEMENT IN EXPRESSION
