	ld	(CNTOFL),a	; FORCE OUTPUT
	ld	a,255	; MAKE NON-ZERO VALUE
	ld	(TEMPA+1),a	; FLAG TO DO "? "
	ret	nz		; JUST RETURN
	call	STRLTI	; MAKE THE MESSAGE A STRING
	ld	a,(hl)	; GET CHAR
	cp	2ch	; COMMA?
	jp	nz,NTICMA	; NO
	xor	a	; FLAG NOT TO DO IT
	ld	(TEMPA+1),a
