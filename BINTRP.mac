	dec	hl
	call	CHRGTR
	jp	z,TRMOK
	cp	44
	jp	nz,TRMNOK	; ENDED PROPERLY?
TRMOK:	
	ex	(sp),hl
	dec	hl	; LOOK AT TERMINATOR
	call	CHRGTR	; AND SET UP CONDITION CODES
