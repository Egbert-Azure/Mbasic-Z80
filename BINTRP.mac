	PUBLIC	DERFNF
	defb	1	; "FILE NOT FOUND"
DERBFN:	ld	e,ERRBFN
	PUBLIC	DERBFN
	defb	1	; "BAD FILE NUMBER"
DERIER:	ld	e,ERRIER
	PUBLIC	DERIER
	defb	1	; "INTERNAL ERROR"
DERRPE:	ld	e,ERRRPE
	PUBLIC	DERRPE
	defb	1	; "READ PAST END"
DERFAO:	ld	e,ERRFAO
	PUBLIC	DERFAO
	defb	1	; "FILE ALREADY OPEN"
