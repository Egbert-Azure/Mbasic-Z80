	ret		; ALL DONE
FMULT3:	ld	b,e	; MULTIPLY BY ZERO: SHIFT EVERYTHING 8 RIGHT
	ld	e,d
	ld	d,c
	ld	c,a	; SHIFT IN 8 ZEROS ON THE LEFT
