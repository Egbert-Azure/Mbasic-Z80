			; TANGENT FUNCTION
			; TAN(X)=SIN(X)/COS(X)
TAN:	call	PUSHF	; SAVE ARG
	call	SIN	;  TAN(X)=SIN(X)/COS(X)
	pop	bc	; GET X OFF STACK
	pop	hl	; PUSHF SMASHES (DE)
	call	PUSHF
	ex	de,hl		; GET LO'S WHERE THEY BELONG
	call	MOVFR
	call	COS
	jp	FDIVT

