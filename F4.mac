	ld	b,0	; FORGET THE BITS WE SHIFTED OUT
	call	c,NEGR	; NEGATE NUMBER IF IT WAS NEGATIVE BECAUSE WE
			;  WANT A SIGNED MANTISSA
	pop	hl	; GET OLD (HL) BACK
	ret		; ALL DONE

